.exchangeBox {
  display: flex;
  flex-direction: column;
  align-items: center
}
.exchangeBox image {
  width: 320rpx;
  height: 320rpx;
  margin: 40rpx 0
}
.exchangeBox>input {
  width:670rpx;
  height:94rpx;
  border-radius:47rpx;
  border:2rpx solid #999;
  overflow: hidden;
  padding: 0 50rpx;
  box-sizing: border-box;
  font-size: 34rpx;
  margin-bottom: 80rpx;
  position: relative;
  z-index: 100
}
.colorGray {
  color: #999;
}
.redeemBtn {
  width:670rpx;
  height:94rpx;
  line-height: 94rpx;
  border-radius:47rpx;
  color: #fff!important;
  font-size: 36rpx
}
.hasCode {
  background:linear-gradient(135deg,rgba(251,83,50,1) 0%,rgba(230,0,18,1) 100%);
}
.noneCode {
  background:linear-gradient(135deg,rgba(251,83,50,.4) 0%,rgba(230,0,18,.4) 100%);
}