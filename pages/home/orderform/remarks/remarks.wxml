<view class="remarks">
  <view class="textareabody">
  <textarea class="remarksTextarea" placeholder="请输入口味、偏好如多放辣油、少放辣油、多放手套等" placeholder-class="placeStyle" maxlength="100" bindinput="inputRemarks" value="{{remarks}}" auto-height></textarea>
