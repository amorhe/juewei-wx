/* pages/login/auth/auth.wxss */

.bindPhone {
  padding: 90rpx 40rpx 0;
  box-sizing: border-box;
}

.TitleName {
  font-size: 56rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.inputView {
  margin: 40rpx 0 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.inputInfo {
  width: 88rpx;
  border-bottom: 1px solid #eee;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
}

.inputClass {
  width: 670rpx;
  height: 50rpx;
}

.loginTitel {
  font-size: 26rpx;
  color: #999;
}

.bindButton {
  width: 670rpx;
  height: 94rpx;
  background: linear-gradient(135deg, rgba(251, 83, 50, 1) 0%, rgba(230, 0, 18, 1) 100%);
  border-radius: 47rpx;
  text-align: center;
  line-height: 94rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  font-size: 36rpx;
  margin: 40rpx auto 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.alipayIcon {
  width: 56rpx;
  height: 56rpx;
}

.bgColor {
  background: #fff;
  color: #333;
  border: 1px solid #eee;
  box-sizing: border-box;
}

.bottomTitle {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

.xyClass {
  color: #108ee9;
}

/* model弹框 */
.headers {
  font-size: 36rpx;
  margin-bottom: 44rpx;
}

.modelBody {
  display: flex;
  align-items: center;
}

.modelInput {
  border-bottom: 1px solid #eee;
  height: 70rpx;
  text-align: left;
  display: flex;
  align-items: center
}


.imgCode {
  width: 160rpx;
  height: 50rpx;
  background: #eee;
  border: 1px solid #eee;
}

.imgCodeIcon {
  width: 160rpx;
  height: 50rpx;
}

.addButton {
  width: 512rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  background: linear-gradient(135deg, rgba(251, 83, 50, 0.5) 0%, rgba(230, 0, 18, 0.5) 100%);
  border-radius: 40rpx;
  margin: 24rpx auto;
  text-align: center
}

.addButtonTrue {
  background: linear-gradient(135deg, rgba(251, 83, 50, 1) 0%, rgba(230, 0, 18, 1) 100%);
}

.modalCode {
  position: absolute;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  left: 0;
  top: 0;
}

.modalCode>view {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  z-index: 10;
  width: 560rpx;
  height: 343rpx;
  background: #fff;
  border-radius:10px;
  text-align: center;
  padding: 40rpx 24rpx 24rpx;
  box-sizing: border-box
}
